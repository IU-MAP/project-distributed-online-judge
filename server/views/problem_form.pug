extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of problem' name='title' required='true' value=(undefined===problem ? '' : problem.title))
    div.form-group
      label(for='detail') Detail:
      input#detail.form-control(type='textarea', placeholder='Deatail' name='detail' value=(undefined===problem ? '' : problem.detail) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
